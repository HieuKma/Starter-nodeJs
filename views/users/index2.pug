extends ../layouts/common
block content
    h1.text-danger.text-center.mb-4 Users list ...
        a.btn.btn-primary.ml-3(href="/users/create") New
    .d-flex
        form.form-group.d-flex.ml-auto(action="/users/search" method="get")
            input.form-control(type="text" placeholder="Nhap" name="q")
            button.btn.btn-primary.ml-3 Search
        //- luu gia tri can tim vao q

    //- show list users
    table.table.table-hover.table-bordered.text-center
        thread
            tr.bg-dark.text-white
                th Name
                th Phone
                th Actions
        tbody
            each user in users
                tr
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-light(href="/users/" + user.id) View